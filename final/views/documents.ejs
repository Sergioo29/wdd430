<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Documents</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    
    <%- include('partials/header') %>

    <main>
        <br>
        <h1>Your Documents</h1>
        <br>
        
        <a href="/new" class="AddButton">+ New</a>

        <br>
        <br>

        <ul class="documentList">
            <% documents.forEach(document => { %>
                <li>

                <h2><strong>Title: <%= document.title %></strong></h2>
                <br>

                <p><%= document.content %></p>
                <br>
                
                <div class="docEditOption"> 
                    <a href="/<%= document._id %>/edit" class="EditButton">Edit</a>

                    <!-- Delete Button Form -->
                    <form action="/<%= document._id %>?_method=DELETE" method="POST" style="display:inline;">
                        <button type="submit" class="DeleteButton" onclick="return confirm('Are you sure you want to delete this document?')">Delete</button>
                    </form>
                </div>

                </li>
            <% }) %>
        </ul>
    </main>

    <!-- Remove this line if it's not needed (if you're using the form submission) -->
    <!-- <script src="/js/delete.js" defer></script> -->

</body>
</html>
